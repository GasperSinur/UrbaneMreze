@model IEnumerable<UrbaneMreze.Models.Photo>

@{
    ViewBag.Title = "Fotografije";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Fotografije</h2>

<p>
    @Html.ActionLink("Ustvari Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Spot.SpotName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Longitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Latitude)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Spot.SpotName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Longitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Latitude)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.PhotoGuid }) |
            @Html.ActionLink("Podrobnosti", "Details", new { id=item.PhotoGuid }) |
            @Html.ActionLink("Izbriši", "Delete", new { id=item.PhotoGuid })
        </td>
    </tr>
}
    
</table>
