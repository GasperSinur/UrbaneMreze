@model UrbaneMreze.Models.PhotoAllViewModel

@{
    ViewBag.Title = "Izbriši";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Izbriši</h2>

<h3>Ali ste prepričani, da želite to izbrisati?</h3>
<div>
    <h4>Fotografija</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Spot.SpotName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Spot.SpotName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Longitude)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Longitude)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Latitude)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.File)
        </dt>

        <dd>
            @{
                if (Model.File != null && Model.File.ContentLength > 0)
                {
                    @:<img src="@ViewBag.ImgSrc" width="100" />
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Thumbnail)
        </dt>

        <dd>
            @{
                if (Model.Thumbnail != null && Model.Thumbnail.ContentLength > 0)
                {
                    @:<img src="@ViewBag.ImgSrcThumb" width="100" />
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateModified)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateModified)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserCreatedID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserCreatedID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserModifiedID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserModifiedID)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Izbriši" class="btn btn-default" /> |
            @Html.ActionLink("Nazaj na seznam", "Index")
        </div>
    }
</div>
