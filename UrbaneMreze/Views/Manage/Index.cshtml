            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Spremenite vaše geslo", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Ustvari", "SetPassword")
            }
            ]
        </dd>
        <dt>Zunanje prijave:</dt>
        <dd>
            @Model.Logins.Count [
            @Html.ActionLink("Urejajte", "ManageLogins") ]
        </dd>
