@model IEnumerable<UrbaneMreze.Models.Entity>

@{
    ViewBag.Title = "Entitete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Entitete</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type.TypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateModified)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserCreatedID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserModifiedID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type.TypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EntityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateModified)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserCreatedID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserModifiedID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EntityGuid }) |
            @Html.ActionLink("Details", "Details", new { id=item.EntityGuid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EntityGuid })
        </td>
    </tr>
}

</table>
