<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Urbane Mreže</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-style navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Home")' class="logo">
                    <img src='@Url.Content("~/Images/UrbaneMrezeLogo.png")' />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("O aplikaciji", "About", "Home")</li>
                    <li>@Html.ActionLink("Aktivnosti", "Activities", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 footer-top">
                    <div class="col-xs-12">
                        <img class="image-footer" src='@Url.Content("~/Images/FisLogo.png")' />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 footer-copyright">
                    <p>&copy; @DateTime.Now.Year - <a href='https://www.fis.unm.si/' target="_blank" class="link">Fakulteta za informacijske študije</a></p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
